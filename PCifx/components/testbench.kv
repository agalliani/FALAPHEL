#:kivy 1.10.0
#:import Factory kivy.factory.Factory

<CustomDropDown>:
    on_select:
        app.root.ids.Notes.ids.mainbutton.text = '{}'.format(args[1])
        app.root.setSerialConnectionPort(args[1])


<Notes>:

    FloatLayout:
        size_hint: None, None

        canvas.before:
            Color:
                rgba: 1, 1, 0, 1

        Button:
            id: mainbutton
            text: "Press to select"
            size_hint: None, None
            size: 150, 40
            on_release: Factory.CustomDropDown().open(self)
    

<MyScreenManager>:
    cols: 2
    BoxLayout:
        height: "45dp"
        size_hint_y: None
        Label:
            text: 'Connected to serial port:'
            size_hint_x: 0.5
        Notes:
            id: Notes
            name: "Notes"
            size_hint_x: 1
    Button:
        id: disconnect_button
        text: "Close Serial connection"
        background_color: 204,0,0
        size_hint: None, None
        size: 170,40
        on_release: app.root.callbackStop()
    Label:
        text: "Global settings"
    BoxLayout:
        orientation: "horizontal"
       
        Label:
            text: "25 fF Capacitance"
        CheckBox:
            color:.294, .761, .623            
        Label:
            text: "25 fF Capacitance"
        CheckBox:
            color:.294, .761, .623
        Label:
            text: "25 fF Capacitance"
        CheckBox:
            color:.294, .761, .623
                


            
   
   
